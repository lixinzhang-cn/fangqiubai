
.body{
	padding: 0 20rpx;
}
.paper-menu{
	background: #FFFFFF;
	z-index: 2000;
	right:0;
	top:10rpx;
	width:55%;
	position: fixed;
	-webkit-box-shadow: 1rpx 1rpx 20rpx 2rpx #CCCCCC;
	        box-shadow: 1rpx 1rpx 20rpx 2rpx #CCCCCC;
}
.paper-menu>view{
	padding:20rpx;
	font-size: 35rpx;
}
.paper-menu>view>view{
	margin-right: 10rpx;
	font-weight: bold;
}
.paper-menu-item-h{
	background: #EEEEEE;
}
.paper-menu-mask{
	position: fixed;
	z-index: 1999;
	top:0;
	right: 0;
	left: 0;
	bottom: 0;
}

