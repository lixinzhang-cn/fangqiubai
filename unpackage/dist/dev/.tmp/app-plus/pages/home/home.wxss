
.home-info{
	padding: 20rpx;
}
.home-info>image{
	width: 100rpx;
	height:100rpx;
	-webkit-border-radius: 100%;
	        border-radius: 100%;
	margin-right: 15rpx;
	-webkit-flex-shrink: 0;
	    -ms-flex-negative: 0;
	        flex-shrink: 0;
}
.home-info>view:first-of-type>view:first-child{
	font-size: 32rpx;
}
.home-info>view:first-of-type>view:last-child{
	color:#BBBBBB;
}
.home-list{
	padding: 20rpx;
}
.home-list-item{
	padding: 20rpx;
	border-top: 1rpx solid #EEEEEE;
	border-bottom: 1rpx solid #EEEEEE;
}
.home-list-item>view:first-child{
	color: #333333;
}
.home-list-item>view:first-child>view{
	margin-right: 10rpx;
}
.home-list-item>view:last-child{
	color: #cccccc;
}
.home-list-hover{
	background: #F4F4F4;
}
.other-login{
	padding: 20rpx 80rpx;
}
.other-login>view>view{
	width:100rpx;
	height: 100rpx;
	-webkit-border-radius: 100%;
	        border-radius: 100%;
	font-size: 55rpx;
	color:#FFFFFF;
}
.other-login .icon-QQ{
	background: #2CAEFC;
}
.other-login .icon-weixin{
	background: #2BD19B;
}
.other-login .icon-xinlangweibo{
	background: #FC7729;
}
.home-data{
	padding: 20rpx 40rpx;
}
.home-data>view{
	color:#989898;
}
.home-data>view>view{
	font-size: 32rpx;
	color: #333333;
}
.home-adv{
	padding: 20rpx;
}
.home-adv>image{
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	height: 150rpx;
}

